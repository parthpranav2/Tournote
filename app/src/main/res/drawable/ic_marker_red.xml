    <!-- Inner white circle -->
    <item android:left="0.5dp" android:top="0.5dp" android:right="0.5dp" android:bottom="0.5dp">
        <shape android:shape="oval">
            <size android:width="23dp" android:height="23dp" />
            <solid android:color="#F44336" />
        </shape>
    </item>

</layer-list>

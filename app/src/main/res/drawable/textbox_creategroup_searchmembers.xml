<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background: soft white -->
    <solid android:color="#C5C5C5" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Light grey stroke for definition -->
    <stroke
        android:width="2dp"
        android:color="#282828" />

    <!-- Optional subtle shadow using padding if needed visually -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Functionality.Segments.Expenses.ExpensesFragment"
    android:background="@color/green_theme_Light">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:background="@color/green_theme_Light_taskbar"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:visibility="visible"
        >


        <ImageView
            android:layout_width="40dp"
            android:id="@+id/grp_logo"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:padding="6dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/defaultgroupimage"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="4dp"
            />

        <TextView
            android:layout_width="0dp"
            android:id="@+id/grp_name"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:textColor="#E0E0E0"
            android:textSize="22sp"
            />

        <ImageButton
            android:id="@+id/more_options"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/baseline_more_vert_24"
            android:visibility="gone"
            app:tint="@color/text_primary" />
    </LinearLayout>

</FrameLayout>
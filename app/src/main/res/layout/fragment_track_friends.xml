<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Functionality.Segments.TrackFriends.TrackFriendsFragment"
    android:background="@color/green_theme_Light">

    <FrameLayout
        android:id="@+id/relPermissions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_theme_Light_taskbar"
        >
        <RelativeLayout
            android:id="@+id/btnPermission"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/greenbutton"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give location track access"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="18sp"
                />
        </RelativeLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/relWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <WebView
            android:id="@+id/WebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</FrameLayout>
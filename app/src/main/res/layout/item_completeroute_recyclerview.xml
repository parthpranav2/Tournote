<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        >
        <!--label-->
        <RelativeLayout
            android:id="@+id/label"
            android:layout_width="30dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <ImageView
                android:id="@+id/imglabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circleforlabel_notstartpoint"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/txtlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:visibility="visible"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <!--textbox-->
        <RelativeLayout
            android:id="@+id/btnPoints"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/label"
            app:layout_constraintEnd_toStartOf="@id/btnRemove"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/txtPoints"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/textbox_completeroute_recyclerview"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="Add Stop"
                android:textSize="18sp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:maxLines="1"
                android:gravity="center_vertical"
                />
        </RelativeLayout>
        <!--clear button-->
        <RelativeLayout
            android:id="@+id/btnRemove"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/btnPoints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>